# Server
PORT=5001
NODE_ENV=production

# Database (Render PostgreSQL)
DATABASE_URL=postgresql://user:password@your-db-host:5432/your-db-name

# Security
JWT_SECRET=replace_this_with_a_strong_secret_at_least_32_chars
ADMIN_KEY=replace_with_secure_admin_key

# Features
FEATURE_PRICE_UPDATES=true

# APIs
CMC_API_KEY=your_coinmarketcap_api_key_here
POLYGON_API_KEY=your_polygon_api_key_here

# Simulator Configuration
# SIMULATOR: which simulator to start - 'balance' (recommended) | 'trade' | 'portfolio' | 'user' | 'none'
# BALANCE_GROWTH_ENABLED: enables balance growth simulator (0.5-2.5% per hour, Mon-Fri only)
SIMULATOR=balance
BALANCE_GROWTH_ENABLED=true
DEBUG_SIMULATOR=false
TRADING_TIMEZONE=UTC
